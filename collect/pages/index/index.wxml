<view class="container">
  <image src="{{src}}" class="aaa"></image>
  <text>{{name}}</text>
  
  <!-- open-type="getUserInfo"激活获取微信用户信息的功能 -->
  <!-- bindgetuserinfo="getMyInfo"将获得的数据传递给自定义函数getMyInfo，函数名称可以自己随便写 -->
  <button open-type="getUserInfo" bindgetuserinfo="getMyInfo">点击获取头像和昵称</button>
</view>


